generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id           Int      @default(autoincrement()) @id
  name         String   @unique
  displayName  String?
  createdBy    String
  createdDate  DateTime @default(now())
  modifiedBy   String
  modifiedDate DateTime @default(now())
  members      Member[]
}

model Member {
  id           Int      @default(autoincrement()) @id
  firstName    String
  lastName     String
  username     String
  email        String
  pictureId    Int?
  workPackage  String?
  createdBy    String
  createdDate  DateTime @default(now())
  modifiedBy   String
  modifiedDate DateTime @default(now())
  groups       Group[]
}
