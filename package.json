{
  "name": "api-template",
  "version": "0.1.0",
  "description": "Prisma + GraphQL template for rapid API development",
  "main": "index.js",
  "scripts": {
    "codegen": "npx prisma generate && graphql-codegen --config gqlCodegen.yml",
    "watch": "tsc -w --copy-files",
    "dev": "nodemon ./dist/index.js",
    "ts-node-dev": "ts-node-dev ./src/index.ts",
    "build": "tsc && copyfiles -f ./src/schema/*.graphql ./dist/schema/ && copyfiles -f ./prisma/* ./dist/prisma/ && copyfiles package.json yarn.lock .env ./dist && cd dist && yarn install --prod && npx prisma generate",
    "prod": "node ./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mxcd/api-template.git"
  },
  "keywords": [
    "api",
    "graphql",
    "prisma",
    "typescript"
  ],
  "author": "Max Partenfelder",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mxcd/api-template/issues"
  },
  "homepage": "https://github.com/mxcd/api-template#readme",
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/introspection": "1.17.8",
    "@graphql-codegen/typescript": "1.17.8",
    "@graphql-codegen/typescript-resolvers": "^1.17.9",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.7",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/node": "^14.6.3",
    "copyfiles": "^2.3.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "0.0.4",
    "nodemon": "^2.0.4",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@prisma/cli": "^2.6.0",
    "@prisma/client": "^2.6.0",
    "apollo-server-errors": "^2.4.2",
    "apollo-server-express": "^2.17.0",
    "axios": "^0.20.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-tools": "^6.2.0",
    "subscriptions-transport-ws": "^0.9.18",
    "winston": "^3.3.3"
  }
}
